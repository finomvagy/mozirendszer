<Window x:Class="mozirendszer.MovieEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Film szerkesztése" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Cím:" />
            <TextBox x:Name="TitleTextBox" Margin="0,0,0,10" />

            <Label Content="Leírás:" />
            <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10" AcceptsReturn="True" Height="80" TextWrapping="Wrap" />

            <Label Content="Megjelenés dátuma:" />
            <DatePicker x:Name="ReleaseDatePicker" Margin="0,0,0,10" />

            <Button x:Name="SaveChangesButton" Content="Változások mentése" Click="SaveChangesButton_Click" />
        </StackPanel>
    </Grid>
</Window>
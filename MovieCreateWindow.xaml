<Window x:Class="mozirendszer.MovieCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Film létrehozása" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Cím:" />
            <TextBox x:Name="TitleTextBox" Margin="0,0,0,10" />

            <Label Content="Leírás:" />
            <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10" AcceptsReturn="True" Height="80" TextWrapping="Wrap" />

            <Label Content="Megjelenés dátuma:" />
            <TextBox x:Name="ReleaseDate" Margin="0,0,0,10" />

            <Button x:Name="CreateMovieButton" Content="Film létrehozása" Click="CreateMovieButton_Click" />
        </StackPanel>
    </Grid>
</Window>
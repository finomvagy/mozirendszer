<Window x:Class="mozirendszer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bejelentkezés" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Email:"/>
            <TextBox Name="EmailBox"/>
            <TextBlock Text="Jelszó:" Margin="0,10,0,0"/>
            <PasswordBox Name="PasswordBox"/>
            <Button Content="Bejelentkezés" Margin="0,10,0,0" Click="LoginButton_Click"/>
            <Button Content="Regisztráció" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
